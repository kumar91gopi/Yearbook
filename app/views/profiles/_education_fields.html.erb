<div class="nested-fields">
    <div class= "input-field">
    <%=f.label :institute, "Institution Name"%>
    <%=f.text_field :institute%>
    </div>
    <div class= "input-field">
    <%=f.label :field, "Specialization"%>
    <%=f.text_field :field%>
    </div>
    <div class= "field">
    <%=f.label :from%>
    <%= f.select :from, (1947..Time.now.year).to_a, :include_blank => "Select year" %>
    </div>
    <div class= "field">
    <%=f.label :to%>
    <%= f.select :to, (1947..Time.now.year).to_a, :include_blank => "Select year" %>
    </div>
     <%= link_to_remove_association "Remove ", f %>
</div>
